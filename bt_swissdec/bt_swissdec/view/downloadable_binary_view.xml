<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_downloadable_binary_form" model="ir.ui.view">
        <field name="name">downloadable.binary.form</field>
        <field name="model">downloadable.binary</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Download File">
                <group>
                    <field name="binary" filename="binary_name" colspan="4" nolabel="1"/>
                    <field name="binary_name" invisible="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>